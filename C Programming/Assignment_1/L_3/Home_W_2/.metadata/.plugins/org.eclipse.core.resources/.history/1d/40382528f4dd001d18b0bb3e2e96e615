*   @version 1.0.1
*   @brief   Write C Program to calculate sum of natural numbers.
*   @details This file contains the C Programming Application.
	@author  Abdullah Tarek Ali
*/

#include<stdio.h>


int main(){

	unsigned int Input_N = 0;
	unsigned char Itr = 0 ;
	unsigned int Output = 0;
	fflush(stdout);
	printf("Enter N of Numbers \n");
	scanf("%d", &Input_N);

	fflush(stdout);

	for(Itr = 0; Itr <= Input_N; Itr++)
	{
		Output += Itr;
	}

	printf("The Sum is = %d ", Output);

	return 0;
}
